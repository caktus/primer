	center()

.secondary-dark
	background-color: $palette.secondary.dark
	color: $palette.grayscale.white
	center()
	
.secondary-dark-edge
	background-color: $palette.secondary.dark-edge
	color: $palette.grayscale.white
	center()

.secondary
	background-color: $palette.secondary.base
	color: $palette.grayscale.white
	center()

.secondary-light
	background-color: $palette.secondary.light
	color: $palette.secondary.very-dark
	center()

.secondary-very-light
	background-color: $palette.secondary.very-light
	color: $palette.secondary.dark
	center()

.accent-very-dark
	background-color: $palette.accent.very-dark
	color: $palette.grayscale.white
	center()

.accent-dark
	background-color: $palette.accent.dark
	color: $palette.grayscale.white
	center()

.accent
	background-color: $palette.accent.base
	color: $palette.grayscale.white
	center()

.accent-light
	background-color: $palette.accent.light
	color: $palette.accent.very-dark
	center()

.accent-very-light
	background-color: $palette.accent.very-light
	color: $palette.accent.dark
	center()

.alert-very-dark
	background-color: $palette.alert.very-dark
	color: $palette.grayscale.white
	center()

.alert-dark
	background-color: $palette.alert.dark
	color: $palette.grayscale.white
	center()

.alert
	background-color: $palette.alert.base
	color: $palette.grayscale.white
	center()

.alert-light
	background-color: $palette.alert.light
	color: $palette.alert.very-dark
	center()

.alert-very-light
	background-color: $palette.alert.very-light
