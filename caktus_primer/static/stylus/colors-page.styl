	line-height: 1
	
.destructive-interactive-element
	applyColorSet("elem-danger")
	text-align: center
	height: 3rem
	padding: 1em 2em
	line-height: 1
	
.disabled-interactive-element
	applyColorSet("elem-disabled")
	text-align: center
