.success-icon,
.alert-icon
	margin-right: 0.5rem
	graduated(font-size, $font-size-small, $font-size-base, 2)

.success-icon
	color: $palette.primary.base
	
.alert-icon
	color: $palette.alert.base	

.success-message
	background-color: $palette.primary.very-light
	color: $palette.primary.very-dark
	text-align: center
	padding: 1.5rem 2rem
	
.attention-grabber-message
	background-color: $palette.accent.very-light
	color: $palette.accent.dark
	text-align: center
	padding: 1.5rem 2rem
	
.alert-message
	applyColorSet("content-alert")
	text-align: center
	padding: 1.5rem 2rem

.neutral-message
	background-color: $palette.grayscale.very-light
	color: $palette.grayscale.very-dark
	text-align: center
	padding: 1.5rem 2rem
	
.affirmative-interactive-element
	applyColorSet("elem-affirm")
	text-align: center
	height: 3rem
	padding: 1em 2em
	line-height: 1
	
.neutral-interactive-element
	applyColorSet("elem-neutral")
	text-align: center
	height: 3rem
