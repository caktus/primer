/*****************************************
              Color Page Styles
******************************************/

// Styles for Colors Page

section.color-gallery
	margin-top: 3rem
	padding: 0
	background-color: $palette.grayscale.white
	.grid
		border: 0 solid

.swatches-category-wrapper
	display:grid
	grid-template-columns: repeat(2, 1fr)
	grid-template-rows: auto
	grid-column-gap: 4vw
	grid-row-gap: 1vw
	@media (max-width: 960px)
		grid-template-columns: repeat(1, 1fr)

.swatches-category h3
	graduated(margin-top, $line-height-small * 1.25, $line-height-base * 1.25)

.swatches-category:nth-child(1) h3,
.swatches-category:nth-child(2) h3
	margin-top: 0
	
.swatches-category:nth-child(2) h3
	@media (max-width: 960px)
		graduated(margin-top, $line-height-small * 1.25, $line-height-base * 1.25)

.swatches
	display: grid
	grid-auto-rows: minmax(40px, auto);
	grid-row-gap: 2vw
	max-width: 100%
	margin: 0 auto
	padding: 0
	background-color: $palette.grayscale.white

.swatch
	border: 1px solid $palette.grayscale.very-light
	list-style: none

.swatch-hue
	height: 4rem
	padding: 1rem
	&.large-text
		graduated(font-size, $font-size-small, $font-size-base, 1)

.swatch-hue p
	text-align: center

.swatch-code
	display: block
	white-space: nowrap
	overflow-x: auto

.swatch-code-comment
	margin-top: 0.5rem
	margin-bottom: 0
	font-size: 14px
	color: $palette.grayscale.mid

.primary-dark-edge
	background-color: color-edge($palette.primary.base, white)
	color: white
	
.primary-very-dark
	background-color: $palette.primary.very-dark
	color: $palette.grayscale.white
	center()

	&::after
		content: '"%s"' % (contrast($palette.primary.very-dark, $palette.grayscale.white).ratio)

.primary-dark
	background-color: $palette.primary.dark
	color: $palette.grayscale.white
	center()
	
.primary
	background-color: $palette.primary.base
	center()

.primary-light-edge
	background-color: color-light-edge($palette.primary.base, $palette.primary.very-dark)
	color: $palette.primary.very-dark
	center()

	&::after
		content '"%s"' % (contrast($palette.primary.base, $palette.primary.very-dark).ratio)

.primary-light
	background-color: $palette.primary.light
	color: $palette.primary.very-dark
	center()

.primary-very-light
	background-color: $palette.primary.very-light
	color: $palette.primary.very-dark
	center()

.secondary-very-dark
