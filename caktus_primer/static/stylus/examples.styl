.wrap
    wrapping(4)
.limit-4
    limit(4)
.page-container
    panels(row, 0.25, 0.75)

    nav
      background: darkgrey
.page-container-2
    panels(column, 0.2, 1, 0.2)

    header, footer
      background: darkgrey
.story
    textColumns(3, 0.5em)
.basic-page-grid2
    gridLayout(4)
    >*
      background: grey
      border: 1px solid black

    header
      gridItem(1, 1, 4, 1)
    nav
      gridItem(1, 2, 1, 2)
    section
      gridItem(2, 2, 3, 1)
    footer
      gridItem(2, 3, 3, 1)
.basic-page-grid3
    gridLayout(4)
    >*
      background: grey
      border: 1px solid black

    header
      gridItem(1, 1, 2, 1)
    nav
      gridItem(3, 1, 2, 1)
    section
      gridItem(1, 2, 4, 1)
    footer
      gridItem(1, 3, 4, 1)

    @media (min-width: 800px)
      header
        gridItem(1, 1, 4, 1)
      nav
        gridItem(1, 2, 1, 2)
      section
        gridItem(2, 2, 3, 1)
      footer
        gridItem(2, 3, 3, 1)
