.wrap
    wrapping(4)
.limit-4
    limit(4)
.page-container
    panels(row, 0.25, 0.75)

    nav
      background: darkgrey
.page-container-2
    panels(column, 0.2, 1, 0.2)

    header, footer
      background: darkgrey
.story
    textColumns(3, 0.5em)
.basic-page-grid2
    gridLayout(4)
    >*
      background: grey
      border: 1px solid black

    header
      gridItem(1, 1, 4, 1)
    nav
      gridItem(1, 2, 1, 2)
    section
      gridItem(2, 2, 3, 1)
    footer
      gridItem(2, 3, 3, 1)
.basic-page-grid3
    gridLayout(4)
    >*
      background: grey
      border: 1px solid black

    header
      gridItem(1, 1, 2, 1)
    nav
      gridItem(3, 1, 2, 1)
    section
      gridItem(1, 2, 4, 1)
    footer
      gridItem(1, 3, 4, 1)

    @media (min-width: 800px)
      header
        gridItem(1, 1, 4, 1)
      nav
        gridItem(1, 2, 1, 2)
      section
        gridItem(2, 2, 3, 1)
      footer
        gridItem(2, 3, 3, 1)

for $colorset-name, $colorset in $colorsets
  .colorset-{$colorset-name}
    applyColorSet($colorset-name)
    padding: 0.5em
    margin: 0.5em 0
    box-shadow: 0 0 3px lightgrey
    display: inline-block
    width: 20%

    code
      color: getColorSetColor($colorset-name, "fg") !important

.important
  applyColorSet("content-attention")

.modal
  padding: 1em
  margin: 0.5em auto
  position: relative
  min-height: 250px

  center()
  
  &::before
    content: "X"
    position: absolute
    top: 0.25em
    right: 0.5em

.message
  padding: 1em
  margin: 0.5em auto
  position: relative
  min-height: 50px

  center()

.alert-msg
  @extend .message
  applyColorSet("content-alert", "interactive")

$brand-color = grey

.button-not-aa
  button-style({
    bg: $brand-color,
    fg: lightgrey,
    hover: darken($brand-color, 20%),
    active: lighten($brand-color, 20%),
    interactive: true,
  })

.button-aa
  button-style({
    bg: closest-aa-contrast($brand-color, lightgrey),
    fg: lightgrey,
    hover: darken(closest-aa-contrast($brand-color, lightgrey), 20%),
    active: lighten(closest-aa-contrast($brand-color, lightgrey), 20%),
    interactive: true,
  })

dt+dd
  margin-left: 2em